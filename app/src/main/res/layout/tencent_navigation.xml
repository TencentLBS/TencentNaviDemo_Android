<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.tencent.map.navi.car.CarNaviView
        android:id="@+id/car_navi_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/navigation"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/road_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/limit_speed"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-20dp"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:paddingRight="10dp"
            android:text="北四环西路"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:maxLines="1"
            android:background="@drawable/navi_road_name_background_day"/>

        <TextView
            android:id="@+id/speed"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="60"
            android:textSize="26sp"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:background="@drawable/navi_bg_speed"/>

        <TextView
            android:id="@+id/limit_speed"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@id/speed"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-5dp"
            android:gravity="center"
            android:text="60"
            android:textSize="26sp"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:maxLines="1"
            android:background="@drawable/navi_bg_speed_limit"/>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="设置"
            android:textSize="17sp"
            android:textColor="#111111" />

        <TextView
            android:id="@+id/distance_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="剩余xx公里 xx分钟"
            android:textSize="15sp"
            android:textColor="#111111"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="退出"
            android:textSize="17sp"
            android:textColor="#111111" />

    </RelativeLayout>

</RelativeLayout>